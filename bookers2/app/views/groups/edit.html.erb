<h2 >Create Group</h2>

<%= form_with model:@group, local:true do |f| %>

  <div class="form-group">
    <label for="group_title">グループ名</label>
    <%= f.text_field :name, :class => 'form-control group_title', :id => 'group_title' %>
  </div>
  <div class="form-group">
    <label for="group_opinion">紹介文</label>
    <%= f.text_area :introduction, :class => 'form-control group_introduction', :id => 'group_introduction' %>
  </div>
  <div class="form-group">
    <label for="group_image">グループ画像</label>
    <%= f.attachment_field :image, placeholder: "プロフィール画像", :class => 'form-control-file group_image' %>
  </div>


  <div class="form-group">
    <%= f.submit 'Update Group', :class => 'btn btn-success' %>
  </div>

<% end %>